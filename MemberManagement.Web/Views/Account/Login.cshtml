@model MemberManagement.Web.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/account/Login.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="login-page">

    <div class="login-card shadow-lg">
        <!-- Header -->
        <div class="login-header mb-4">
            <i class="bi bi-person-circle login-icon"></i>
            <h2 class="login-title">Member Login</h2>
        </div>

        <!-- Login Form -->
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>


            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control login-input" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control login-input" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-login">Login</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="ForgotPassword" class="login-link">Forgot Password?</a>
        </div>
    </div>
</div>
