<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MemberManagement.Web.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        @* Header navbar is commented out, leaving as is *@
    </header>

    <div class="d-flex">
        @* Sidebar Partial *@
        <div>
            @await Html.PartialAsync("_Sidebar")
        </div>

        @* Main content area *@
        <div class="flex-grow-1 p-3" style="margin-left:220px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @* Footer is commented out, leaving as is *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
