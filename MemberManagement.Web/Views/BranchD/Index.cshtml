@model IEnumerable<MemberManagement.Web.ViewModels.BranchVM.BranchItemVM>

@{
    ViewData["Title"] = "Branches";
}

<h2>Branches</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Branch</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Active</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.Name</td>
                <td>@branch.Address</td>
                <td>@(branch.IsActive ? "Yes" : "No")</td>
                <td>@branch.DateCreated.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@branch.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@branch.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
