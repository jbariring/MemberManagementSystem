@* @model MemberManagement.Web.ViewModels.MemberListVM

<div class="table-wrapper">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Member ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birth Date</th>
                <th>Address</th>
                <th>Branch</th>
                <th>Contact No</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Members != null && Model.Members.Any())
            {
                foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@member.MemberID</td>
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.BirthDate?.ToString("yyyy-MM-dd")</td>
                        <td>@member.Address</td>
                        <td>@member.Branch</td>
                        <td>@member.ContactNo</td>
                        <td>@member.Email</td>
                        <td class="actions">
                            <a class="action-link" asp-action="Edit" asp-route-id="@member.MemberID">Edit</a>
                            <a class="action-link" asp-action="Details" asp-route-id="@member.MemberID">Details</a>
                            <a class="action-link" asp-action="Delete" asp-route-id="@member.MemberID">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="no-data">No members found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pagination">
    @if (Model.PageNumber > 1)
    {
        <a href="javascript:void(0)"
           onclick="loadMembers(@(Model.PageNumber - 1))">Prev</a>
    }

    <span>Page @Model.PageNumber of @Model.TotalPages</span>

    @if (Model.PageNumber < Model.TotalPages)
    {
        <a href="javascript:void(0)"
           onclick="loadMembers(@(Model.PageNumber + 1))">Next</a>
    }
</div>
 *@