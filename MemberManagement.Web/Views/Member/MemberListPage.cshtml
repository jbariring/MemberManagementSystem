@model IEnumerable<MemberManagement.Web.ViewModels.MemberVM>

@{
    ViewData["Title"] = "Member List";
}

<h2>Member List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Member</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Address</th>
            <th>Branch</th>
            <th>Contact No</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var member in Model)
            {
                <tr>
                    <td>@member.MemberID</td>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.BirthDate?.ToString("yyyy-MM-dd")</td>
                    <td>@member.Address</td>
                    <td>@member.Branch</td>
                    <td>@member.ContactNo</td>
                    <td>@member.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@member.MemberID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@member.MemberID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@member.MemberID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">
                    No members found.
                </td>
            </tr>
        }
    </tbody>
</table>