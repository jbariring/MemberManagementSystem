@model MemberManagement.Web.ViewModels.MemberVM

<link rel="stylesheet" href="~/css/member/Edit.css" />
@{
    ViewData["Title"] = "Edit Member";
}

<div class="edit-container">
    <div class="header-text">
        <h2>Edit Member</h2>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MemberID" />

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Branch"></label>
            <input asp-for="Branch" class="form-control" />
            <span asp-validation-for="Branch" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactNo"></label>
            <input asp-for="ContactNo" class="form-control" />
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

@*         <div class="form-group checkbox-group">
            <label>
                <input asp-for="IsActive" />
                @Html.DisplayNameFor(m => m.IsActive)
            </label>
        </div> *@

        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                Save Changes
            </button>
            <a asp-action="MemberListPage" class="btn btn-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
