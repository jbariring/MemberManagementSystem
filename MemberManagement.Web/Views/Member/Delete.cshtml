@model MemberManagement.Web.ViewModels.MemberVM

@{
    ViewData["Title"] = "Delete Member";
}

<h2>Delete Member</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong>
    This action will deactivate the member (soft delete).
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Member ID:</strong> @Model.MemberID</p>
        <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <input type="hidden" name="memberId" value="@Model.MemberID" />

    <button type="submit" class="btn btn-danger">
        Yes, Deactivate
    </button>

    <a asp-action="MemberListPage" class="btn btn-secondary">
        Cancel
    </a>
</form>
